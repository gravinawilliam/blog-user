{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@application/*":["./src/application/*"],
      "@dtos/*":["./src/domain/dtos/*"],
      "@domain/*":["./src/domain/*"],
      "@shared/*":["./src/shared/*"],
      "@fakes/*":["./src/fakes/*"],
      "@infra/*":["./src/infra/*"],
      "@main/*":["./src/main/*"]
    }
  }
}
